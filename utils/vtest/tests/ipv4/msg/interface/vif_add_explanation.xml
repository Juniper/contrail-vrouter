<?xml version="1.0"?>
<test>
    <test_name>Add interface</test_name>
    <message>
        <vr_interface_req>
<!--
    h_op options
    ADD and GET options have been tested.

        ADD
        GET
        DELETE
        DUMP
        RESPONSE
        RESET
-->
            <h_op>Add</h_op>

<!--
    Only VIRTUAL type is tested.

        VIF_TYPE_HOST               0
        VIF_TYPE_AGENT              1
        VIF_TYPE_PHYSICAL           2
        VIF_TYPE_VIRTUAL            3
        VIF_TYPE_XEN_LL_HOST        4
        VIF_TYPE_GATEWAY            5
        VIF_TYPE_VIRTUAL_VLAN       6
        VIF_TYPE_STATS              7
        VIF_TYPE_VLAN               8
        VIF_TYPE_MONITORING         9
        VIF_TYPE_MAX               10
-->

            <vifr_type>3</vifr_type>
<!--
    idx and name MUST be same!!!
    Currently, vtest does not have maps idx to name.
-->

            <vifr_idx>1</vifr_idx>
            <vifr_name>1</vifr_name>
<!--
    Only PMD transport type (2) is currently tested.
        VIF_TRANSPORT_VIRTUAL       0
        VIF_TRANSPORT_ETH           1
        VIF_TRANSPORT_PMD           2
        VIF_TRANSPORT_SOCKET        3
-->
            <vifr_transport>2</vifr_transport>
            <vifr_vrf>0</vifr_vrf>
            <vifr_mac>de:ad:be:ef:00:02</vifr_mac>
            <vifr_mtu>1514</vifr_mtu>
        </vr_interface_req>
        <return>0</return>
    </message>
</test>

